---
interface TimelineItem {
  date: string;
  title: string;
  description: string;
  image?: string;
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="relative">
  <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-gray-800"></div>
  <div class="space-y-12">
    {items.map((item, index) => (
      <div class={`flex ${index % 2 === 0 ? 'flex-row' : 'flex-row-reverse'} items-center`}>
        <div class="w-1/2 pr-8 text-right">
          <div class={`p-6 rounded-lg border border-gray-800 ${index % 2 === 0 ? 'ml-auto' : ''}`}>
            <time class="text-ruby-primary font-bold">{item.date}</time>
            <h3 class="text-xl font-bold mt-2">{item.title}</h3>
            <p class="text-gray-400 mt-2">{item.description}</p>
            {item.image && <img src={item.image} alt={item.title} class="mt-4 rounded-lg" />}
          </div>
        </div>
        <div class="w-4 h-4 bg-ruby-primary rounded-full relative z-10"></div>
        <div class="w-1/2 pl-8"></div>
      </div>
    ))}
  </div>
</div>