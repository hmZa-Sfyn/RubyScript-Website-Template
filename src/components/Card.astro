---
interface Props {
  title: string;
  description?: string;
  href?: string;
}

const { title, description, href } = Astro.props;
---

<div class={`p-6 rounded-lg border border-gray-800 ${href ? 'hover:border-ruby-primary cursor-pointer' : ''}`}>
  <h3 class="text-xl font-bold mb-2">{title}</h3>
  {description && <p class="text-gray-400">{description}</p>}
</div>