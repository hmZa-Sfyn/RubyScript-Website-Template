---
const navigation = [
  { text: "About", href: "/about" },
  { text: "Docs", href: "/docs" },
  //{ text: "Blog", href: "/blog" },
  { text: "Examples", href: "/examples" },
  { text: "Authors", href: "/authors" },
  { text: "Changelog", href: "/changelog" },
  { text: "Packages", href: "/packageindex" },
  { text: "Plugins", href: "/pluginindex" },
  { text: "Ecosystem", href: "/ecosystem" },
];

const currentPath = Astro.url.pathname;

// Add GitHub stats
const githubStats = {
  stars: "2.1k",
  forks: "342",
  contributors: "89"
};
---

<header class="border-b border-gray-800 sticky top-0 bg-github-dark/95 backdrop-blur-sm z-50">
  <div class="container mx-auto px-4">
    <!-- GitHub Stats Bar -->
    <div class="border-b border-gray-800 py-2">
      <div class="flex justify-center space-x-6 text-sm text-gray-400">
        <a href="https://github.com/rubyscript/rubyscript" class="hover:text-ruby-primary">
          ‚≠ê {githubStats.stars} stars
        </a>
        <a href="https://github.com/rubyscript/rubyscript/network/members" class="hover:text-ruby-primary">
          üî± {githubStats.forks} forks
        </a>
        <a href="https://github.com/rubyscript/rubyscript/graphs/contributors" class="hover:text-ruby-primary">
          üë• {githubStats.contributors} contributors
        </a>
      </div>
    </div>
    
    <!-- Main Navigation -->
    <nav class="py-4">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center space-x-2 group">
          <div class="w-8 h-8 bg-ruby-primary rounded-lg flex items-center justify-center group-hover:bg-ruby-secondary">
            <span class="text-white font-bold">RS</span>
          </div>
          <span class="text-2xl font-bold text-ruby-primary group-hover:text-ruby-secondary">
            RubyScript
          </span>
        </a>

        <div class="hidden md:flex space-x-6">
          {navigation.map(item => (
            <a
              href={item.href}
              class:list={[
                "hover:text-ruby-primary transition-colors relative py-2",
                currentPath === item.href && "text-ruby-primary after:absolute after:bottom-0 after:left-0 after:w-full after:h-0.5 after:bg-ruby-primary"
              ]}
            >
              {item.text}
            </a>
          ))}
        </div>

        <div class="flex items-center space-x-4">
          <a
            href="https://github.com/rubyscript"
            class="text-gray-400 hover:text-ruby-primary"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.73.083-.73 1.205.085 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.605-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.295 24 12c0-6.63-5.37-12-12-12"/>
            </svg>
          </a>
          <button class="md:hidden text-gray-400 hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </nav>
  </div>
</header>