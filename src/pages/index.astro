---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <div class="container mx-auto px-4 py-20">
    <div class="text-center">
      <h1 class="text-6xl font-bold mb-6">
        <span class="text-ruby-primary">Ruby</span>Script
      </h1>
      <p class="text-xl text-gray-400 mb-12">
        A modern, elegant programming language for the web
      </p>
      <div class="space-x-4">
        <a href="/docs" class="bg-ruby-primary hover:bg-ruby-secondary px-8 py-3 rounded-lg inline-block">
          Get Started
        </a>
        <a href="/examples" class="border border-ruby-primary text-ruby-primary hover:bg-ruby-primary hover:text-white px-8 py-3 rounded-lg inline-block">
          View Examples
        </a>
      </div>
    </div>
  </div>
</Layout>